CREATE TABLE IF NOT EXISTS employees (
    first_name VARCHAR(10),
    last_name VARCHAR(10),
    annual_salary DECIMAL(8, 2) UNSIGNED,
    address VARCHAR(100),
    email VARCHAR(100) NOT NULL PRIMARY KEY,
    work_phone CHAR(10),
    personal_phone CHAR(10)
);

